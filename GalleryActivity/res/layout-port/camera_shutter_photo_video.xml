<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_shutter"
    style="@style/NtianShutterGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/shutter_btn_margin_button"
    android:splitMotionEvents="false" >

    <com.android.camera.ui.ShutterButton
        android:id="@+id/shutter_button_photo"
        style="@style/ShutterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/accessibility_shutter_button"
        android:src="@drawable/ntian_btn_photo" />

    <com.android.camera.ui.ShutterButton
        android:id="@+id/shutter_button_video"
        style="@style/ShutterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/shutter_btn_margin_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/accessibility_video_shutter_button"
        android:src="@drawable/ntian_btn_video" />

</RelativeLayout>